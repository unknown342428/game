import pygame
import random
# Initialize Pygame
pygame.init()
# Screen dimensions
screen_width = 800
screen_height = 600
screen = pygame.display.set_mode((screen_width, screen_height))
pygame.display.set_caption("Simple RPG")
# Colors
black = (0, 0, 0)
white = (255, 255, 255)
red = (255, 0, 0)
# Player class
class Player:
    def __init__(self, name, health, attack, defense):
        self.name = name
        self.health = health
        self.attack = attack
        self.defense = defense
    def take_damage(self, damage):
        self.health -= damage
        if self.health <= 0:
            print(f"{self.name} has died!")
    def attack_target(self, target):
        damage = self.attack - target.defense
        if damage > 0:
            target.take_damage(damage)
            print(f"{self.name} attacks {target.name} for {damage} damage.")
        else:
            print(f"{self.name} attacks {target.name} but does no damage.")
# Enemy class
class Enemy:
    def __init__(self, name, health, attack, defense):
        self.name = name
        self.health = health
        self.attack = attack
        self.defense = defense
    def take_damage(self, damage):
        self.health -= damage
        if self.health <= 0:
            print(f"{self.name} has been defeated!")
    def attack_target(self, target):
        damage = self.attack - target.defense
        if damage > 0:
            target.take_damage(damage)
            print(f"{self.name} attacks {target.name} for {damage} damage.")
        else:
            print(f"{self.name} attacks {target.name} but does no damage.")
# Create player and enemy instances
player = Player("Hero", 100, 15, 5)
enemy = Enemy("Goblin", 50, 10, 3)
# Game loop
running = True
while running:
    # Event handling
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
    # Game logic
    if enemy.health > 0:
        # Player's turn
        action = input("What do you want to do? (attack/heal/run): ")
        if action.lower() == "attack":
            player.attack_target(enemy)
        elif action.lower() == "heal":
            player.health += 10
            print(f"{player.name} heals for 10 HP.")
        elif action.lower() == "run":
            print(f"{player.name} runs away!")
            break
        else:
            print("Invalid action.")
        # Enemy's turn (if enemy is still alive)
        if enemy.health > 0:
            enemy.attack_target(player)
    else:
        print("You have won!")
        break
    # Update display (very basic for now)
    screen.fill(black)
    pygame.display.flip()
# Quit Pygame
pygame.quit()
